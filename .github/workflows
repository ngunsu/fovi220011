name: Gatsby Deploy

on:
  push:
    branches:
      - main  # Replace 'main' with your primary branch

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v3

      - name: Use Node.js 16  # Or the appropriate Node version for your project
        uses: actions/setup-node@v3
        with:
          node-version: 16

      - name: Cache dependencies
        uses: actions/cache@v3
        with:
          path: ~/.npm
          key: ${{ runner.os }}-node-${{ hashFiles('**/package-lock.json') }}
          restore-keys: |
            ${{ runner.os }}-node-

      - name: Install dependencies
        run: npm ci

      - name: Build Gatsby site
        run: npm run build 

      - name: Deploy to GitHub Pages
        uses: peaceiris/actions-gh-pages@v3
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: ./public  
          destination_dir: .  # Deploy to the root of the target repo
          user_name: 'ngunsu'  # Username of the target repository owner
          repository_name: 'fovi22011.github.io'  # Name of the target repository

